<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:padding="@dimen/dp_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_4"
            android:id="@+id/text_index_item_Extype"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_ic_volume"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/dp_4" />

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_alignTop="@id/text_index_item_Extype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/text_index_item_Extype"
            android:layout_toRightOf="@id/text_index_item_Extype"
            android:layout_marginStart="@dimen/dp_8">

            <TextView
                android:textColor="@color/colorTextJapanese"
                android:id="@+id/text_1_item_Extype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/textSizeJapanese" />

            <TextView
                android:id="@+id/text_2_item_Extype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_1_item_Extype"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_3_item_Extype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/text_2_item_Extype"
                android:layout_below="@id/text_1_item_Extype"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/text_2_item_Extype"
                android:layout_toRightOf="@id/text_2_item_Extype"
                android:textSize="@dimen/textSizePhiemAm" />

            <TextView
                android:textColor="@color/colorTextMean"
                android:id="@+id/text_4_item_Extype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text_3_item_Extype"
                android:textSize="@dimen/textSizeMean" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>