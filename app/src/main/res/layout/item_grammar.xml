<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:id="@+id/text_index_item_grammar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_ic_volume"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/dp_4" />
        <TextView
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_alignParentTop="true"
            android:id="@+id/text_item_name_grammar"
            android:textSize="@dimen/textSizeJapanese"
            android:textColor="@color/colorTextJapanese"
            android:layout_toRightOf="@id/text_index_item_grammar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_index_item_grammar"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_8" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/text_item_name_grammar"
            android:id="@+id/text_item_content_grammar"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>