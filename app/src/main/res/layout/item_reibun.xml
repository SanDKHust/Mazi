<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:padding="@dimen/dp_4"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_4"
            android:id="@+id/text_index_item_reibun"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_ic_volume"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/dp_4" />
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp_4"
            android:layout_toRightOf="@id/text_index_item_reibun"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_index_item_reibun">
            <TextView
                android:textColor="@color/colorTextJapanese"
                android:textSize="20sp"
                android:id="@+id/text_reibun_type0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_roumaji_item_reibun_type0"
                android:textSize="@dimen/textSizePhiemAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/textSizeMean"
                android:textColor="@color/colorTextMean"
                android:id="@+id/text_vi_mean_item_reibun_type0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/colorTextJapanese"
                android:textSize="@dimen/textSizeJapanese"
                android:id="@+id/text_reibun_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_roumaji_item_reibun_type1"
                android:textSize="@dimen/textSizePhiemAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/textSizeMean"
                android:textColor="@color/colorTextMean"
                android:id="@+id/text_vi_mean_item_reibun_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>