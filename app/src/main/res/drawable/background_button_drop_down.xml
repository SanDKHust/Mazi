<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#c4c4c4"
                android:endColor="#f7f7f7"
                android:angle="90">
            </gradient>
            <corners android:radius="6dp" />
            <stroke
                android:width="1px"
                android:color="#c4c4c4" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right">
        <bitmap android:src="@drawable/ic_drop_down_img"/>
    </item>
</layer-list>